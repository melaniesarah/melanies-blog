<h1>Listing Articles</h1>
<img src="http://cliparts.co/cliparts/pT5/rB9/pT5rB9Kgc.png" alt="Drama masks"  height="100" width="100"/>
<%= link_to 'New Article', new_article_path, class: "big button" %>
 <table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Actions</th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article), class: "small button" %></td>
    </tr>
  <% end %>
</table>